{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build minishell",
      "type": "shell",
      "command": "make",
      "args": [
        "debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Clean minishell",
      "type": "shell",
      "command": "make",
      "args": [
        "fclean"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Rebuild minishell",
      "type": "shell",
      "command": "make",
      "args": [
        "re"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}